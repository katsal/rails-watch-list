<div class="container d-flex flex-column">
  <div class="d-flex justify-content-center">
    <div class="card flex-fill p-4 mt-4 shadow-sm">
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-secondary d-flex justify-content-center" %>
        <% end %>
    </div>
  </div>
</div>
