<div class="container">
<div class="d-flex gap-4">
<ul class="list-unstyled d-flex gap-4 mt-4 flex-wrap">
  <% @lists.each do |list| %>
      <div class="card card-background" style = "background-image: url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : '' %>'); background-size: cover" >
        <div class="card-body d-flex align-items-center justify-content-center">
            <li class="text-center text-uppercase"><p><%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %></p></li>
          </div>
      </div>
    <% end %>
    <div class="card rounded-4 card-background" >
      <div class="card-body d-flex align-items-center justify-content-center">
        <li class="text-center text-uppercase">
          <p><%= link_to "New list", new_list_path, class: "text-decoration-none text-white" %></p></li>
      </div>
    </div>
  </ul>
</div>
</div>
