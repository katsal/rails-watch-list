<div class="container">
  <div class="d-flex flex-wrap">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mt-4 mx-4" style="width: 18rem;">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title"><%= bookmark.comment.capitalize %></h5>
            <hr>
            <h6 class="card-subtitle mb-2 text-muted"><%= bookmark.movie.title %></h6>
            <p class="card-text"><%= bookmark.movie.overview %></p>
          </div>
          <div>
            <div class="d-flex justify-content-between">
              <div class="d-flex align-items-center gap-2">
                <i class="fa-solid fa-star" style="color: #000000;"></i>
                <%= bookmark.movie.rating %>
              </div>
              <div>
                <%= link_to bookmark_path(bookmark) , class: "card-link" ,data: { turbo_method: :delete, turbo_confirm: "Delete This bookmark ?" } do%>
                  <i class="fa-solid fa-trash" style="color: #000000;"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card flex-fill p-4 shadow-sm m-4">
  <%= render "lists/form" , list: @list, bookmark: @bookmark%>
</div>
</div>
